{
  "extends": "@scaleway/tsconfig",
  "compilerOptions": {
    "target": "esnext",
    // For storybook compatibility we use commonjs
    "module": "commonjs",
    "jsxImportSource": "@emotion/react",

    "noEmit": true,
    "skipLibCheck": true,

    // Should be removed once we clear all errors
    "noUncheckedIndexedAccess": false
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".storybook/**/*.ts",
    ".storybook/**/*.tsx",
    "emotion.d.ts",
    "global.d.ts",
    ".jest/setupTests.ts"
  ],
  "exclude": ["node_modules", "coverage", "dist", "packages/website"]
}
