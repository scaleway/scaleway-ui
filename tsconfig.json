{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "esModuleInterop": true,
    "noEmit": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "jsx": "preserve"
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    ".storybook/**/*.ts",
    ".storybook/**/*.tsx",
    "src/emotion.d.ts",
    "src/global.d.ts",
    ".jest/setupTests.ts"
  ],
  "exclude": ["node_modules", "coverage", "dist", "website"]
}
