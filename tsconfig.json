{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "esModuleInterop": true,
    "noEmit": true,
    "moduleResolution": "node",
    "jsx": "preserve",
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "emotion.d.ts",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "coverage",
    "dist"
  ]
}
