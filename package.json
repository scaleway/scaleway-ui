    "rollup-plugin-dts": "5.3.0",
    "rollup-plugin-postcss": "4.0.2",
    "rollup-plugin-visualizer": "5.9.0",
    "seedrandom": "3.0.5",
    "shx": "0.3.4",
    "size-limit": "8.2.4",
    "storybook-dark-mode": "3.0.0",
    "timekeeper": "2.2.0",
    "typescript": "4.9.5",
    "webpack": "5.81.0",
    "zxcvbn": "4.4.2"
  }
}
